<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="Lab_project_4_DS_a.InputSpace"
	x:Name="Window"
	Background="Transparent"
	Title="InputSpace"
	Width="210" Height="110" BorderBrush="Transparent" OpacityMask="White" ResizeMode="NoResize" WindowStyle="None" Padding="0" FontFamily="Roboto" WindowStartupLocation="CenterScreen" Foreground="transparent">

	<Grid x:Name="LayoutRoot" Background="transparent" SnapsToDevicePixels="True">
		<TextBox HorizontalAlignment="Left" Height="75" Margin="0,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210" BorderThickness="0" Cursor="Pen" Padding="9,9,0,0"/>
		<Label Content="Enter input string" HorizontalAlignment="Left" Height="35" VerticalAlignment="Top" Width="210" Foreground="#FF009688" Background="White" Padding="12,7,7,9" FontSize="14.667" FontFamily="Roboto" FontWeight="Medium"/>
		<Button Content="OK" HorizontalAlignment="Left" Height="15" Margin="170,85,0,0" VerticalAlignment="Top" Width="30" Background="{x:Null}" BorderThickness="0" Foreground="#FF009688" FontSize="10.667" Click="Button_Click" FontWeight="Medium"/>
	</Grid>
</Window>